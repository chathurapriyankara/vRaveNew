<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.virtusa.vravenew"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.virtusa.vravenew.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.virtusa.vravenew.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" >
        </activity>
        <activity
            android:name="com.virtusa.vravenew.VRaveMainActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.virtusa.vravenew.AddNewRaveActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/app_name"
            android:parentActivityName="com.virtusa.vravenew.VRaveMainActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.virtusa.vravenew.VRaveMainActivity" />
        </activity>
        <activity
            android:name="com.virtusa.vravenew.RaveDetailActivity"
            android:icon="@drawable/ic_launcher_white"
            android:label="@string/app_name"
            android:parentActivityName="com.virtusa.vravenew.VRaveMainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.virtusa.vravenew.VRaveMainActivity" />
        </activity>
        <activity
            android:name="com.virtusa.vravenew.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings"
            android:icon="@drawable/ic_launcher_white" >
        </activity>
    </application>

</manifest>